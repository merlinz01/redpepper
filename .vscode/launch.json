{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Agent",
      "type": "debugpy",
      "request": "launch",
      "module": "redpepper.agent",
      "args": [
        "--config-file",
        "config/agent.yml",
        "--log-level",
        "DEBUG"
      ],
      "justMyCode": false
    },
    {
      "name": "Manager",
      "type": "debugpy",
      "request": "launch",
      "module": "redpepper.manager",
      "args": [
        "--config-file",
        "config/manager.yml",
        "--log-level",
        "DEBUG"
      ],
      "justMyCode": false
    },
    {
      "name": "Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "env": {
        "PYDEVD_DISABLE_FILE_VALIDATION": "1"
      }
    }
  ]
}